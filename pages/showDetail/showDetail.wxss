/* pages/showDetail/showDetail.wxss */
.content_detail{
  /* font-size: 34rpx; */
}
.nav{
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:36rpx;
  letter-spacing:2px;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.personShow{
  width: 100%;
}
.hidden{
  overflow: hidden;
}
.midHeadImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
}
.detailLayout{
  padding:0 40rpx;
}
.personInfo{
  font-size:34rpx;
}
.personInfo_showBox{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.personInfo_intro{
  flex: 1;
  padding-left: 20rpx;
}
.person_intro{
  margin-top: 20rpx;
}
.follow{
  border:1px solid #91caf7;
  border-radius:10rpx;
  color: #1e99ff;
  padding: 3px 40rpx;
}
.person_address{
  margin-top: 20rpx;
  display: flex;
    font-size:32rpx;
}
.person_address .receiptTime{
  margin-left: 10rpx;
}

.comment_view{
  display: flex;
  margin-top: 20rpx;
}
.comment_input{
  margin-left: 20rpx;
  border:1px solid #ccc;
}


.btmFixed{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
}
.btmFixed > view{
  flex: 1;
  text-align: center;
}